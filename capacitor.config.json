{
  "appId": "com.aclgestion.app",
  "appName": "ACL GESTION",
  "webDir": "www",
  "bundledWebRuntime": false,
  "server": {
    "url": "https://acl-gestion.com",
    "cleartext": false,
    "allowNavigation": ["acl-gestion.com", "*.acl-gestion.com"]
  },
  "ios": {
    "contentInset": "automatic",
    "allowsLinkPreview": false,
    "scrollEnabled": true,
    "backgroundColor": "#1E3A5F",
    "preferredContentMode": "mobile",
    "scheme": "ACL GESTION"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#1E3A5F",
      "showSpinner": true,
      "spinnerColor": "#FFFFFF",
      "splashFullScreen": true,
      "splashImmersive": true
    },
    "StatusBar": {
      "style": "LIGHT",
      "backgroundColor": "#1E3A5F"
    },
    "Keyboard": {
      "resize": "body",
      "resizeOnFullScreen": true
    },
    "PushNotifications": {
      "presentationOptions": ["badge", "sound", "alert"]
    }
  }
}
