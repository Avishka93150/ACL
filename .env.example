# ACL GESTION - Configuration Environnement
# Copier ce fichier en .env et remplir les valeurs

# Base de donnees
DB_HOST=localhost
DB_NAME=acl_gestion
DB_USER=votre_user
DB_PASS=votre_password

# JWT (generer une cle unique : php -r "echo bin2hex(random_bytes(32));")
JWT_SECRET=CHANGEZ_CETTE_CLE_SECRETE
JWT_EXPIRY=604800

# Application
APP_URL=https://votre-domaine.com
APP_NAME=ACL GESTION
DEBUG=false

# CORS (domaine autorise pour les requetes cross-origin)
CORS_ORIGIN=https://votre-domaine.com
